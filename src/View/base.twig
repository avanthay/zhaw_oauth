
{% import 'snippets/macro.twig' as func %}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <title>Dave's oauth 2.0 App</title>

    {% block assets %}
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ app.request.basepath }}/css/style.css">
        <script src="{{ app.request.basepath }}/js/jquery-2.1.4.min.js"></script>
        <script src="{{ app.request.basepath }}/js/bootstrap.min.js"></script>
    {% endblock assets %}
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">Dave's oauth 2.0 app</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li{{ func.isActive(path('home')) }}><a href="{{ path('home') }}">Home</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Actions <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        {% include 'snippets/actions.twig' with {'isNav': 'true'} %}
                    </ul>
                </li>
                <li{{ func.isActive(path('admin')) }}><a href="{{ path('admin') }}">Secured area</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('admin_logout') }}">Logout</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <div class="page-header">
        {% block pageHeader %}
            <h1>Dave's oauth 2.0 app</h1>
        {% endblock pageHeader %}
    </div>
    {% block content %}

    {% endblock content %}
</div>

<footer class="footer">
    <div class="container">
        <p class="text-muted">Created by dave for a project at ZHAW. Find me on <a href="https://github.com/avanthay/zhaw_oauth">GitHub</a></p>
    </div>
</footer>

</body>
</html>